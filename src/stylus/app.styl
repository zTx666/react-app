opa0 = rgba(0, 0, 0, 0);

body, #reactApp 
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    background: url('../img/bg.jpg') 100%;
    background-size: cover;
    background-repeat: no-repeat;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
.app-Box 
    border-radius: 15px;
    overflow: hidden;
    .app-header 
        background: #3E40F4;
        padding: 5px 25px;
        line-height: 100%;
        .app-header-left 
            line-height: 100%;
            .logo 
                font-size: 1.3rem;
                font-weight: bold;
                font-style: italic;
                color: white;
            .xiexian 
                width: 2px;
                height: 1.6rem;
                background: rgba(250, 250, 250, 0.5);
                margin: 0 15px;
            

            .userControll 
                font-size: 1rem;
                font-weight: 500;
                color: white;
                cursor: pointer;
                line-height: 1.3rem;
                opacity: 0.7;
                transition: all 200ms ease;
            

            .userControll:hover 
                opacity: 1;
            

            .anticon-down 
                vertical-align: middle;
            
        

        .app-header-right 
            color: white;
            font-size: 1rem;
            font-weight: 500;

            .header-page-list li 
                text-align: center;
            

            .header-page-list, .header-page-list a 
                padding-inline-start: 0;
                margin: 0;
                list-style: none;
                color: white;
                margin-top: 15px;
            

            .header-page-list 
                height: 100%;
                line-height: 100%;
            

            .header-page-list a::after, .active::after 
                content: '';
                visibility: hidden;
                display: inline-block;
                width: 10%;
                height: 4px;
                color: #000;
                background: white;
                border-radius: 10px;
                transition: all 300ms linear;
            

            .header-page-list a:hover::after 
                width: 100%;
                visibility: visible;
                transition: all 300ms linear;
            

            .header-page-list a:hover, .active 
                background-image: linear-gradient(to right, white, white, #1b89b9, white, #0a3f7b);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            

            .HearderSearchIpt 
                height: 100%;
                line-height: 100%;

                .ant-input 
                    background: opa0;
                    color: white;
                

                .ant-input-suffix 
                    span 
                        color: white;
                    
                

                .ant-btn 
                    color: rgba(255, 255, 255, 0.6);
                    background: opa0;
                    border-color: rgba(255, 255, 255, 0.6);

                    &:hover 
                        border-color: rgba(255, 255, 255, 1);
                        color: white;
                    
                
            

            .language-change-btn 
                font-size: 0.8rem;
                font-weight: 600;
                color: rgba(255, 255, 255, 0.7);
                padding: 10px;
                transition: all 0.5s linear;

                &:hover 
                    background: rgba(0, 0, 0, 0.2);
                    border-radius: 8px;
                    transition: all 0.5s linear;
                
    .app-cont 
        background: #3E40F4
        .app-cont-left 
            padding 10px 
            .user-box
                width 100%
                .userShow-level-circle
                    .CircleMaskBox
                        width 120px
                        height 120px
                    .pie 
                        position: relative;
                        margin: 1em auto;
                        padding: 0;
                        width: 120px;
                        height: 120px;
                        border-radius: 100%;
                        list-style: none;
                        overflow: hidden;
                        transform: rotate(1.5deg) 
                        .slice 
                            overflow: hidden;
                            position: absolute;
                            top: 0; 
                            right: 0;
                            width: 50%;
                            height: 50%;
                            transform-origin: 0% 100%; 
                            border-bottom 6px solid #3E40F4
                            background: #2E36C9
                        .slice-1 
                            transform: rotate(-30deg) skewY(-60deg);
                        .slice-2 
                            transform: rotate(-60deg) skewY(-60deg);
                        .slice-3 
                            transform: rotate(-90deg) skewY(-60deg);
                        .slice-4 
                            transform: rotate(-120deg) skewY(-60deg);
                        .slice-7 
                            transform: rotate(-270deg) skewY(-60deg);
                        .slice-8 
                            transform: rotate(-300deg) skewY(-60deg);
                        .slice-9 
                            transform: rotate(-330deg) skewY(-60deg);
                        .slice-10 
                            transform: rotate(-360deg) skewY(-60deg);
                        .pieMask
                            width: 114px
                            height 114px
                            position: absolute
                            left: 3px
                            top 3px
                            background #3E40F4
                            z-index: 5
                            border-radius: 50%
                            .user-img
                                width 85px
                                height 85px
                                border-radius: 50%
                                overflow hidden
                                border none
                                transition: all 200ms linear;
                                cursor pointer
                                &:hover
                                    transition: all 200ms linear;
                                    transform: scale(1.1) ;
            .user-name
                width 100%
                text-align: center
                font-size 1.1rem
                font-weight: 600
                color white
                font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
                margin-top: -10px
            .user-introduce
                font-size: 0.8rem
                color rgba(255,255,255,.6)
                line-height: 1.5rem
                font-weight: 500
            .user-operation
                margin-top: 15px
                font-size 1rem
                color rgba(255,255,255,.80)
                font-weight: 600
                .anticon
                    font-size: 1.6rem
        .app-cont-right
            font-size:1rem
        .app-option-box
            background-color #fff
            height 120px
    .app-foot 
        background-image: linear-gradient(to bottom,#EAEEF3,#ECF1F6)
        height 400px
        .app-foot-left
            padding 15px
            height 100%
            .option-list
                list-style none
                border-radius: 25px
                margin 0
                cursor pointer
                padding-inline-start: 0px;
                .option-li
                    border-radius: 25px
                    height 100px
                    max-height: 100px
                    padding:  10px     
                    vertical-align: middle
                    transition: all 400 ease;
                    font-size: 1.4rem
                    .option-icon
                        z-index 5
                    .option-name
                        line-height: 1.2rem
                        font-size: 0.8rem
                        z-index 5
                .option-li:first-child
                    color white
                .option-active
                    display inline-block
                    position absolute
                    border-radius: 25px
                    z-index 1
                    background #3845DC
                    padding 10px
                    






            





